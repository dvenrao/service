<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>City</th>
    <th>Locality</th>
    <th>Type</th>
    <th>You are</th>
    <th>Price</th>
    <th>Mobile no</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><%= post.city %></td>
    <td><%= post.locality_id %></td>
    <td><%= post.type %></td>
    <td><%= post.you_are %></td>
    <td><%= post.price %></td>
    <td><%= post.mobile_no %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

