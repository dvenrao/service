<h1>Listing posts</h1>

<table class="table">
  <tr>
    <th>Category</th>
    <th>Title</th>
    <!--<th>Description</th>-->
    <th>City</th>
    <th>Locality</th>
    <th>Type</th>
    <th>Mobile no</th>
    <th>Created At</th>
    <!--<th></th>-->
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.category.name if post.category %></td>
    <td><%= link_to post.title, edit_post_path(post) %></td>
    <!--<td><%#= truncate(post.description) %></td>-->
    <td><%= post.city %></td>
    <td><%= post.locality.name if post.locality %></td>
    <td><%= post.service_type %></td>
    <td><%= post.mobile_no %></td>
    <td><%= post.created_at %></td>
    <!--<td><%#= link_to 'Show', post %></td>-->
    <!--<td><%#= link_to 'Edit', edit_post_path(post) %></td>-->
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

