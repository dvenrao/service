<% @posts.each do |post| %>
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= post.title %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-2">
            <img alt="120x120" class="img-thumbnail" data-src="holder.js/200x200" style="width: 120px; height: 120px;" src="">
          </div>
          <div class="col-sm-8">
            <p><%= post.category.name if post.category %></p>
            <p><%= post.city %></p>
            <p><%= post.locality.name if post.locality %></p>
            <p><%= post.description %></p>
            <p><%= post.mobile_no %></p>
            <p><%= post.created_at %></p>
          </div>
          <div class="col-sm-2">
            <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>